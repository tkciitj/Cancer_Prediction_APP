<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/radiologic_factors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RadiologicFactors">

    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@drawable/img4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="C_Diag App"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="8"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@drawable/img1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Page 4: Nodule Growth and Abnormalities -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="● Has the nodule shown any growth in the last 6 months?"
        android:textSize="16dp"
        android:textColor="@color/black" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Yes"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. No"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Unknown"
            android:textSize="16dp"
            android:textColor="@color/black" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="● Are there associated abnormalities in the surrounding lung parenchyma?"
        android:textSize="16dp"
        android:textColor="@color/black" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. No abnormalities detected"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Scarring"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Suspicion of inflammatory changes"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Atelectasis or consolidation"
            android:textSize="16dp"
            android:textColor="@color/black" />
    </RadioGroup>

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="NEXT"
    android:layout_marginTop="40dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/black"
    android:textColor="@color/white"
    android:layout_gravity="center_horizontal" />

    </LinearLayout>