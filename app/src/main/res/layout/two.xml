<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FamilyHistoryOccupationalHazards">

    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@drawable/img4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="C_Diag App"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="8"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@drawable/img1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Heading -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Clinical Questions"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Family History of Cancer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Is there any family history of cancer?"
        android:textSize="16dp"
        android:textColor="@color/black" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Yes"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. No"
            android:textSize="16dp"
            android:textColor="@color/black" />
    </RadioGroup>

    <!-- Exposure to Occupational Hazards -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Has the patient been exposed to occupational hazards (e.g., asbestos, radon)?"
        android:textSize="16dp"
        android:textColor="@color/black" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Yes"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. No"
            android:textSize="16dp"
            android:textColor="@color/black" />
    </RadioGroup>

    <!-- Other Lung Diseases -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Does the patient have any other lung diseases?"
        android:textSize="16dp"
        android:textColor="@color/black" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="40dp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Chronic obstructive pulmonary disease (COPD)"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Pulmonary fibrosis"
            android:textSize="16dp"
            android:textColor="@color/black" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. None"
            android:textSize="16dp"
            android:textColor="@color/black" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textColor="@android:color/white"
            android:background="@drawable/round_button"
            android:textStyle="bold"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Next"
            android:textColor="@android:color/white"
            android:background="@drawable/round_button"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
